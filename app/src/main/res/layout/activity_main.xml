<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Setup Screen (shown on first run) -->
    <LinearLayout
        android:id="@+id/setupLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security Scoring Engine"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="32dp" />

        <TextView
            android:id="@+id/setupMessageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome! To begin, please select your scoring configuration file.\n\nThe configuration will be securely encrypted and stored on this device."
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:lineSpacingMultiplier="1.3" />

        <Button
            android:id="@+id/selectConfigButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Configuration File"
            android:textSize="16sp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: This app requires root access to monitor system policies and settings."
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:textColor="#666666"
            android:lineSpacingMultiplier="1.2" />
    </LinearLayout>

    <!-- Main Screen (shown after configuration loaded) -->
    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score: 0 / 0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:background="#E3F2FD"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/refreshButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Refresh Score"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/forensicsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Forensics"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/resetConfigButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset Config"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F5F5F5"
            android:padding="8dp">

            <TextView
                android:id="@+id/reportTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading scoring report..."
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textColor="#000000" />
        </ScrollView>
    </LinearLayout>
</FrameLayout>
